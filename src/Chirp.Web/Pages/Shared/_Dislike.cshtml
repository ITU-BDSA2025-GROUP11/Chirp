@using Chirp.Core.DTO
@model CheepDTO
@inject SignInManager<Author> SignInManager


@{
    var dislikedCheeps = ViewData["DislikedCheeps"] as List<int>;
    
    bool hasDisliked = dislikedCheeps != null && dislikedCheeps.Contains(Model.Id);
    
    bool isMe = User.Identity?.Name == Model.Author.Username;
    var numberOfDislikes = Model.Dislikes.Count;
    var heartFilled = $"Ô∏èü§° {numberOfDislikes}";
    var heartEmpty = $"‚ö™Ô∏è {numberOfDislikes}";
    
}

@if (SignInManager.IsSignedIn(User) && !isMe)
{
    @if (hasDisliked)
    {
        <form method="post" asp-page-handler="UnDislike" asp-route-cheepId="@Model.Id" value="@Model.Id" style="display: inline;">
            <button style="background:transparent;padding:0;color: black;">
                @heartFilled 
            </button>
        </form>
    }
    else
    {
        <form method="post" asp-page-handler="Dislike" asp-route-cheepId="@Model.Id" value="@Model.Id" style="display: inline;">
            <button style="background:transparent;padding:0;color: black;">
                @heartEmpty 
            </button>
        </form>
    }
} else if (!SignInManager.IsSignedIn(User))
{
    <button style="background:transparent;padding:0;color: black;text-decoration:none;" href="/Identity/Account/Login">
        @heartEmpty
    </button>
}

