
@using Chirp.Core.DTO
@model Chirp.Core.DTO.CheepDTO
@inject SignInManager<Author> SignInManager

@{
    var LikingIds = ViewData["Likes"] as List<string>;
   
    bool hasLiked = LikingIds != null && LikingIds.Contains(Model.Id);
    
    bool isMe = User.Identity?.Name == Model.Author.Username;
}

@if (SignInManager.IsSignedIn(User) && !isMe)
{
    @if (hasLiked)
    {
        <form method="post" asp-page-handler="UnLike" asp-route-authorId="@Model.Id" value="@Model.Id"  style="display: inline;">
        <button type="submit" class="btn btn-link p-0 m-0" style="font-size: 0.9em; vertical-align: baseline;">
            Unlike
        </button>
        </form> 
    }
    else
    {
        <form method="post" asp-page-handler="Like" asp-route-authorId="@Model.Id" value="@Model.Id" style="display: inline;">
            <button type="submit" class="btn btn-link p-0 m-0" style="font-size: 0.9em; vertical-align: baseline;">
                Like 
            </button>
        </form>
    }
}
