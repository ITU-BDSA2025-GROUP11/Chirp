@inject SignInManager<Author> SignInManager


<div class="navigation">
    <!-- LOGIN PARTIAL LOADED -->
    @if (SignInManager.IsSignedIn(User) && User.Identity?.IsAuthenticated == true)
    {
        var safeName = User.Identity?.Name ?? "User";
        <div>
            <a href="/@safeName">My timeline</a> |
            <a href="/">Public timeline</a> |
            <a class="nav-link text-dark" href="/AboutMe">About me</a> |
            <form class="form-inline" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                  asp-area="Identity" method="post">
                <button class="nav-link btn btn-link text-dark"
                        type="submit">Logout [@(User.Identity.Name)]</button>
            </form>
        </div>
    }
    else
    {
        <div>
            <a class="nav-link text-dark" asp-area="Identity"
               asp-page="/Account/Register">Register</a> |
            <a class="nav-link text-dark" asp-area="Identity"
               asp-page="/Account/Login">Login</a> 
        </div>
    }
</div>