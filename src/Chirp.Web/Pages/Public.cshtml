@page "/{publicpage:int?}"
@model Chirp.Razor.Pages.PublicModel
.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.CurrentPageCheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author.Username">@cheep.Author.Username</a>
                        </strong>
                        @cheep.Text
                        <small>&mdash; @cheep.TimeStamp</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
<div>
    <ul class="nav">
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="nav @(i == Model.CurrentPage ? "active" : "")">
                <a href="?publicpage=@i" class="page-link">@i</a>
            </li>
        }
    </ul>
</div>
